{
  "name": "ptt",
  "version": "0.1.0",
  "private": true,
  "author": "liukun",
  "description": "使用`electron`+`react`实现一个图片转文字桌面应用",
  "scripts": {
    "start:r": "react-app-rewired start",
    "build:r": "react-app-rewired build",
    "test:r": "react-app-rewired test",
    "eject:r": "react-app-rewired eject",
    "start:e": "NODE_ENV=development electron ./public/electron/index.js",
    "build:mac": "NODE_ENV=production electron-builder --mac",
    "build:win": "NODE_ENV=production electron-builder --win"
  },
  "main": "build/electron/index.js",
  "build": {
    "appId": "com.Pictrue To Text.app",
    "extends": null,
    "files": [
      "build",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "antd": "^4.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "customize-cra": "^0.9.1",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "3.4.1",
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "electron-reload": "^1.5.0",
    "babel-plugin-import": "^1.13.0"
  }
}
